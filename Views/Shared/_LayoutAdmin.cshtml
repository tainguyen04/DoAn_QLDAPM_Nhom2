<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/siteadmin.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QLCHBanDienThoaiMoi.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>
    <header>
        <!-- 1. NAVBAR -->
        <nav class="admin-navbar">
            <div class="container-fluid">
                <div class="row align-items-center">
                    <div class="col">
                        <h4 class="mb-0 text-gold">
                            <i class="fas fa-tachometer-alt me-2"></i>
                            @ViewData["Title"]
                        </h4>
                    </div>
                    <div class="col-auto">
                        <div class="dropdown">
                            <button class="btn btn-outline-gold dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                <i class="fas fa-user me-2"></i>Admin User
                            </button>
                            <ul class="dropdown-menu dropdown-menu-dark">
                                <li><a class="dropdown-item" href="#"><i class="fas fa-user me-2"></i>Profile</a></li>
                                <li><a class="dropdown-item" href="#"><i class="fas fa-cog me-2"></i>Settings</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item text-danger" asp-controller="Account" asp-action="Logout">
                                        <i class="fas fa-sign-out-alt me-2"></i>Đăng xuất
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </nav>

        <!-- 2. SIDEBAR -->
        <div class="sidebar">
            <div class="sidebar-brand">
                <h3><i class="fas fa-crown"></i> ADMIN</h3>
            </div>
            <div class="sidebar-nav">
                <nav class="nav flex-column">
                    <a class="nav-link" asp-area="Admin" asp-controller="Home" asp-action="Index">
                        <i class="fas fa-tachometer-alt"></i>
                        <span>Dashboard</span>
                    </a>
                    <a class="nav-link" asp-area="Admin" asp-controller="SanPhams" asp-action="Index">
                        <i class="fas fa-box"></i>
                        <span>Quản lý Sản Phẩm</span>
                    </a>
                    <a class="nav-link" asp-area="Admin" asp-controller="KhachHang" asp-action="KhachHang">
                        <i class="fas fa-users"></i>
                        <span>Quản lý Khách Hàng</span>
                    </a>
                    <a class="nav-link" asp-area="Admin" asp-controller="DonHang" asp-action="DonHang">
                        <i class="fas fa-shopping-cart"></i>
                        <span>Quản lý Đơn Hàng</span>
                    </a>
                    <a class="nav-link" asp-area="Admin" asp-controller="ThongKe" asp-action="ThongKe">
                        <i class="fas fa-chart-bar"></i>
                        <span>Thống Kê</span>
                    </a>
                    <a class="nav-link" asp-controller="Admin" asp-action="CaiDat">
                        <i class="fas fa-cog"></i>
                        <span>Cài Đặt</span>
                    </a>
                    <a class="nav-link" asp-controller="Home" asp-action="Index">
                        <i class="fas fa-home"></i>
                        <span>Về Trang Chủ</span>
                    </a>
                </nav>
            </div>
        </div>
    </header>
    <!-- 3. MAIN CONTENT (RenderBody) -->
    <div class="main-content">
        <div class="content-wrapper">
            @RenderBody()
        </div>
    </div>

    <!-- 4. FOOTER -->
    <footer class="admin-footer">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col">
                    &copy; 2024 - QLCHBanDienThoaiMoi - Admin Panel
                </div>
                <div class="col-auto">
                    <span class="text-gold">
                        <i class="fas fa-heart"></i> Made with passion
                    </span>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>