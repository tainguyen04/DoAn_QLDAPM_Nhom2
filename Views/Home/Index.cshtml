@model IEnumerable<QLCHBanDienThoaiMoi.Models.SanPham>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="container mt-3">
    <div class="row row-cols-md-5 g-3">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <a asp-action="Details" asp-route-id="@item.Id">
                        <img class="card-img-top" src="~/images/@item.HinhAnh"
                             alt="@item.TenSanPham" style="height:160px;object-fit:cover;">
                    </a>
                    
                    <div class="card-body d-flex flex-column">
                        <a asp-action="Details" asp-route-id="@item.Id"
                           class="card-title"
                           style="text-decoration:none; color:black; white-space: normal; word-wrap: break-word;">
                            @item.TenSanPham
                        </a>

                        <h5 style="color:red;">@Html.FormatPrice(item.GiaBan)</h5>
                        <div class="mt-auto d-flex gap-2">
                            <a href="#" class="btn btn-primary flex-fill text-center">
                                <i class="fa-solid fa-cart-plus"></i> <b> Thêm vào giỏ</b>
                            </a>
                            
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <nav aria-label="Page navigation example" style="padding-top:25px;">
        <ul class="pagination justify-content-center">
            <!-- Nút Previous -->
            <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" href="@(ViewBag.CurrentPage == 1 ? "#" : Url.Action("Index", new { page = ViewBag.CurrentPage - 1, pageSize = ViewBag.PageSize }))"
                @(ViewBag.CurrentPage == 1 ? "tabindex=\"-1\" aria-disabled=\"true\"" : "")>Trang trước</a>
            </li>

            <!-- Các trang số -->
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = i, pageSize = ViewBag.PageSize })">@i</a>
                </li>
            }

            <!-- Nút Next -->
            <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                <a class="page-link" href="@(ViewBag.CurrentPage == ViewBag.TotalPages ? "#" : Url.Action("Index", new { page = ViewBag.CurrentPage + 1, pageSize = ViewBag.PageSize }))">Trang sau</a>
            </li>
        </ul>
    </nav>

</div>
